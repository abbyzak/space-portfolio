{
  "name": "company-portfolio-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "dev:admin": "npm run dev --workspace=apps/admin",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:admin\"",
    "build": "npm run build --workspace=apps/web",
    "build:admin": "npm run build --workspace=apps/admin",
    "build:all": "npm run build --workspace=apps/web && npm run build --workspace=apps/admin",
    "start": "npm run start --workspace=apps/web",
    "start:admin": "npm run start --workspace=apps/admin",
    "lint": "npm run lint --workspace=apps/web && npm run lint --workspace=apps/admin"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "author": {
    "name": "Your Company",
    "email": "contact@yourcompany.com",
    "url": "https://yourcompany.com"
  },
  "description": "Company portfolio with admin panel and booking system",
  "license": "MIT"
}